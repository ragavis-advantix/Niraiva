# Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# PORT & ENVIRONMENT
# ============================================
# Port the Express server listens on
# Locally: 5000
# Render: Set by Render platform automatically
PORT=5000

# Node environment
NODE_ENV=development

# ============================================
# FRONTEND URLS (for redirects and CORS)
# ============================================
# Frontend URL for OAuth callbacks and redirects
# Local development
FRONTEND_URL=http://localhost:5173

# ============================================
# DATABASE & SUPABASE
# ============================================
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================
# FHIR SERVER (HAPI)
# ============================================
# HAPI FHIR server URL
# Local: http://localhost:8080/fhir
# Production: Your HAPI FHIR instance
HAPI_FHIR_URL=http://localhost:8080/fhir

# ============================================
# REDIS CACHE
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# ABHA/ABDM INTEGRATION
# ============================================
# ABHA Sandbox API credentials
CLIENT_ID=your_client_id
CLIENT_SECRET=your_client_secret
PUBLIC_API_TOKEN=your_api_token

# ABHA API configuration
ABHA_BASE_URL=https://abhasbx.abdm.gov.in/abha/api/v3
X_CM_ID=sbx
SBX=sbx

# ============================================
# GOOGLE OAUTH
# ============================================
# Google OAuth credentials for Gmail/Drive integration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/google/callback

# ============================================
# JWT/TOKEN
# ============================================
# Secret key for JWT token signing
JWT_SECRET=your_jwt_secret_key_min_32_chars

# ============================================
# LOGGING & DEBUG
# ============================================
# Enable verbose logging
DEBUG=true
LOG_LEVEL=debug
